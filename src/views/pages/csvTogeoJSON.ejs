<%- include('../includes/layout'); -%>

<%- include('../includes/header'); -%>

<body>

<div class="container b-white shadow mt-5 mb-5 rounded p-3">

    <h3>CSV to geoJSON</h3><hr>

    <form>
        <div class="form-group">
            <label for="csvFile">Add CSV file:</label>
            <input type="file" name="csv" class="form-control-file form-control-md" id="csvFile" accept=".csv">
        </div>

        <div class="mt-3 mb-3">
            <p>Total rows in the file: <span id="numberOfRows">0</span></p>
        </div>

        <button type="submit" class="btn btn-secondary" id="preview">Preview</button>
        <button type="submit" class="btn btn-primary" id="submit">Submit</button>
    </form>

    <hr>

    <div class="mt-3 mb-3 d-none">
        <p>Pharmacies added in JSON: <span id="pharmaciesAdded">0</span></p>
        <p>Pharmacies ERROR: <span id="pharmaciesError">0</span></p>
    </div>

    <div class="alert alert-success d-none" id="alert" role="alert">
        File successfully added in <span id="srcFile"></span>
    </div>

    <div id="parsed_csv_list" class="mt-5"></div>

</div>

</body>

<script src="/js/csvTogeoJSON.js"></script>

<%- include('../includes/footer'); -%>